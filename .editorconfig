root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 2

[*.toml]
indent_size = 4
indent_style = space

# YAML doesn't support hard tabs
# Templates that will be weird with hard tabs in the website editor
[*.{yml,yaml,md}]
indent_style = space
indent_size = 2

# Force python as python demands
[*.{py,ipynb}]
indent_size = 4
indent_style = space

# Ignore lockfiles
[*.lock]
indent_size = unset
indent_style = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
